<h1>Burgers!</h1>

<p>Manage Burgers with this app</p>
<div class="toeat">
  <h2>To Eat</h2>
  <ul>
    {{#each burgers}} 
    <li>
      <p>
        <span class="label">ID:</span> {{this.id}}</p>
      <p>
        <span class="label">Burger:</span> {{this.burger_name}}</p>
      <p>
        <span class="label">Eaten:</span> {{this.devoured}}</p>

      <button data-id="{{this.id}}" data-state="{{this.devoured}}" class="eat">Eat</button>
    </li>
    {{/each}}
  </ul>
</div>

<div class="eaten">
  <h2>Eaten Burgers</h2>
  <ul>
    {{#each burgers}} {{#if devoured}}
    <li>
      <p>
        <span class="label">ID:</span> {{this.id}}</p>
      <p>
        <span class="label">Burger:</span> {{this.burger_name}}</p>
      <p>
        <span class="label">Eaten:</span> {{this.devoured}}</p>
    </li>
    {{/if}} {{/each}}
  </ul>
</div>
<div>
  <h2>Add a Burger</h2>

  <form class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burg" name="author">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>